<div id="container">
  <div id="home-cat-display">
  <h1><%= link_to 'Categories', categories_path %></h1>
    <ul id='category-list'>
      <% if @categories.any?  %>
        <% @categories.each do |cat| %>
          <li><%= link_to cat.name, category_path(cat) %></li>
        <% end %>
      </ul>
    <% end %>
  </div>

  <div id="home-art-display">
    <h1><%= link_to 'Articles', articles_path %></h1>
    <ul id='articles-list'>
      <% if @articles.any?  %>
        <% @articles.each do |art| %>

           <% if art.thumbnail %> <img src="<%=art.thumbnail%>" style="width:100px;height:100px;dispaly:inline-block"> <% else %> <img src="https://raw.githubusercontent.com/TylerSmall19/cotton-tales/NoahRGuy-logo/logo.png" style="width:100px;height:100px"> <% end %> <li><%= link_to art.title, article_path(art) %><br>
          <%= art.shorten %>
          </li><br><br>
        <% end %>
      </ul>
    <% end %>
  </div>
</div>
